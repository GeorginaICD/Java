package boutique;

/**
 *
 * @author georg
 */
public class Livre extends Article{
    
     protected String isbn;
    protected int nbPages;

    
    public Livre(String description, double prixInitial, int nbExemplaires, String isbn, int nbPages) {
        super(description, prixInitial, nbExemplaires);
        this.isbn = isbn;
        this.nbPages = nbPages;
    }
    
      @Override
    public String getNumero() {
        return isbn;
    }

    @Override
    public double calculerPrix() {
        // RÃ©duction de 50% en avril :
        java.time.LocalDate d = java.time.LocalDate.now();
        if (d.getMonthValue() == 4) return prixInitial * 0.5;
        return prixInitial;
    }

    @Override
    public String toString() {
        return super.toString() + " - ISBN : " + isbn + " - " + nbPages + " pages";
    }
    
}
