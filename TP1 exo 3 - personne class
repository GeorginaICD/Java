package ex1;
import java.time.LocalDate; // pour obtenir l'année courante
/*La classe Personne est une classe de modèle (ou classe métier).
Elle définit un type d’objet, avec ses attributs et comportements 
*/

/**
 *
 * @author georg
 */
public class Personne {

    /**
     * @param args the command line arguments
     * */
  // --- Attributs ---
    private String nom;
    private String prenom;
    private int anNaissance;
    
    private static int nbPersonnes = 0;

    // --- Constructeur naturel ---
    public Personne(String nom, String prenom, int anNaissance) {
        this.nom = nom;
        this.prenom = prenom;
        this.anNaissance = anNaissance;
        
         nbPersonnes++;
         afficherNbPers(); // Affiche le nombre total
    }
    
    // --- Constructeur partiel ---
    public Personne(String prenom, int anNaissance) {
        this.nom = "Inconnu";
        this.prenom = prenom;
        this.anNaissance = anNaissance;
        
        
        nbPersonnes++;
         afficherNbPers(); // Affiche le nombre total
    }
    
     // --- Constructeur par défaut ---
    public Personne() {
        this("Potter", "Harry", 1980); // Appel du premier constructeur
    }
    
      // --- Getters ---
    public String getNom() {
        return nom;
    }

    public String getPrenom() {
        return prenom;
    }

    public int getAnNaissance() {
        return anNaissance;
    }
    
    // --- Setters ---
    public void setNom(String nom) {
        this.nom = nom;
    }

    public void setPrenom(String prenom) {
        this.prenom = prenom;
    }

    public void setAnNaissance(int anNaissance) {
        this.anNaissance = anNaissance;
    }
    
        // --- Méthode 6 : calculerAge() ---
    public int calculerAge() {
        int anneeActuelle = LocalDate.now().getYear();
        return anneeActuelle - anNaissance;
    }
    
    // --- Méthode 7 : afficherInfos() ---
    public void afficherInfos() {
        System.out.println("Nom : " + nom);
        System.out.println("Prénom : " + prenom);
        System.out.println("Âge : " + calculerAge());
    }
    
      // --- Méthode 8 : mange() ---
    public void mange(String aliment) {
        System.out.println(nom + " " + prenom + " mange un/une " + aliment);
    }
    
       public static void afficherNbPers() {
        System.out.println("Nombre total de personnes créées : " + nbPersonnes);
    }
       
         // --- Exercice 3, méthode 13 : isBissextile ---
    public boolean isBissextile(int annee) {
        return (annee % 4 == 0 && annee % 100 != 0) || (annee % 400 == 0);
    }
    
    // --- Exercice 3, méthode 14 : afficherNombresPremiers ---
    public void afficherNombresPremiers() {
        System.out.println("Nombres premiers <= " + anNaissance + " :");
        for (int i = 2; i <= anNaissance; i++) {
            if (estPremier(i)) {
                System.out.print(i + " ");
            }
        }
        System.out.println(); // saut de ligne à la fin
    }

    // Méthode privée pour tester si un nombre est premier
    private boolean estPremier(int n) {
        if (n < 2) return false;
        for (int i = 2; i < n; i++) {
            if (n % i == 0) return false;
        }
        return true;
    }
    
    /*Un nombre premier est défini comme :

Un entier strictement supérieur à 1

Qui n’a pas d’autres diviseurs que 1 et lui-même

*/
       
  // Méthode pour tester si une chaîne est un palindrome
public boolean isPalindrome(String chaine) {
    // Supprimer les espaces et mettre en minuscule pour normaliser
    String texte = chaine.replaceAll("\\s+", "").toLowerCase();

    int debut = 0;
    int fin = texte.length() - 1;

    // Boucle de comparaison des caractères
    while (debut < fin) {
        if (texte.charAt(debut) != texte.charAt(fin)) {
            return false; // Si un caractère ne correspond pas, ce n'est pas un palindrome
        }
        debut++;
        fin--;
    }
    return true; // Tous les caractères correspondent → palindrome
}

    
    
}
