        Produit p2 = new Produit(2, "Cahier", 5.0, 2);

        Client client = new Client(1, "Alice", "alice@mail.com");

        Panier panier = new Panier();
        panier.ajouterProduit(p1);
        panier.ajouterProduit(p2);

        Commande commande = new Commande(101, client, panier);

        commande.afficherDetailsCommande();
    }
}
